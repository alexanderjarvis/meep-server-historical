# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
#*       /{controller}/{action}                  {controller}.{action}

# CRUD module
*       /admin             						module:crud

#
GET		/oauth2/?								oauth2.AccessToken.auth
POST	/oauth2/?								oauth2.AccessToken.auth
DELETE	/oauth2/?								oauth2.AccessTokenDestroy.destroy

# 
# Application specific routes
#

GET		/users/?								Users.index
POST	/users/?								Users.create
GET		/users/{id}/? 							Users.show
PUT 	/users/{id}/?							Users.update
POST	/users/{id}/add/?						Users.addUserConnection

GET		/search/users/{search}					Users.searchUser





# test
GET		/long/									LongPoll.index