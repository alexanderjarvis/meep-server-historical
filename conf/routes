# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
#*       /{controller}/{action}                  {controller}.{action}

# CRUD module
*       /admin             						module:crud

#
GET		/auth/?									Security.authenticate
POST	/auth/?									Security.authenticate

# 
# Application specific routes
#

GET		/Users/?								Users.index
GET		/Users/create							Users.create
POST	/Users/?								Users.create
GET		/Users/{id} 							Users.show
GET		/Users/update/{id}						Users.update
PUT		/Users/{id}								Users.update
GET		/Users/delete/{id}						Users.delete
DELETE	/Users/{id}								Users.delete


GET		/UserConnections/?						UserConnections.index
GET		/UserConnections/create					UserConnections.create
POST	/UserConnections/?						UserConnections.create
GET		/UserConnections/{id} 					UserConnections.show
#no update
GET		/UserConnections/delete/{id}			UserConnections.delete
DELETE	/UserConnections/{id}					UserConnections.delete